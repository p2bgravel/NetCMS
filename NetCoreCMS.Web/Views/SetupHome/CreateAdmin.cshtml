@using NetCoreCMS.Core.Modules.Setup.Models.ViewModels
@model AdminViewModel

@{
    Title = "Create Admin";
    Layout = "_SimpleLayout";
}

<div class="page-header text-center">
    <h1>NetCoreCMS Setup</h1>
</div>
<p class="lead text-center">This is the NetCoreCMS Setup Page. Please fill the following information and press submit to complete the setup process.</p>
@*<hr />*@
<form class="form-horizontal" asp-controller="SetupHome" asp-action="CreateAdmin" method="post">
    <input type="hidden" asp-for="TablePrefix" value="@ViewBag.TablePrefix" />
    <span asp-validation-summary="ValidationSummary.All" class="text-danger"></span>
    <div class="form-group">
        <label class="control-label col-sm-2" for="SiteName">Site Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="SiteName" name="SiteName" asp-for="SiteName" placeholder="Enter Site Name" value="Website Name">
            <span asp-validation-for="SiteName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Tagline">Tagline:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Tagline" name="Tagline" asp-for="Tagline" placeholder="Enter Tagline" value="Website tag line">
            <span asp-validation-for="Tagline" class="text-danger"></span>
        </div>
    </div>
            
    <div class="form-group">
        <label class="control-label col-sm-2" for="AdminUserName">SuperAdmin Username:</label>
        <div class="col-sm-10">
            <input asp-for="AdminUserName" type="text" class="form-control" id="AdminUserName" name="AdminUserName" placeholder="Enter SuperAdmin UserName" value="Admin">
            <span asp-validation-for="AdminUserName" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label class="control-label col-sm-2" for="AdminPassword">SuperAdmin Password:</label>
        <div class="col-sm-10">
            <input asp-for="AdminPassword" type="password" class="form-control" id="AdminPassword" name="AdminPassword" placeholder="Enter SuperAdmin Password">
            <span asp-validation-for="AdminPassword" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label class="control-label col-sm-2" for="ConfirmPassword">Confirm Password:</label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Enter Confirm Password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label class="control-label col-sm-2" for="Email">Email:</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="Email" class="form-control" id="Email" name="Email" placeholder="Enter Email" value="admin@yourdomain.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>   
    
    <div class="form-group">
        <label class="control-label col-sm-2" for="SetupTemplate">Language:</label>
        <div class="col-sm-10">
            <select asp-for="Language" type="text" class="form-control" asp-items="@ViewBag.Languages">
                <option value="">Select Language</option>                
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="SetupTemplate">Website Template:</label>
        <div class="col-sm-10">
            <select asp-for="SetupTemplate" type="text" class="form-control" id="SetupTemplate" name="SetupTemplate">
                <option value="">Select your template</option>
                <option value="Basic" selected>Basic</option>
                @*<option value="Blog">Blog</option>
                <option value="PersonalProfile">Personal Profile</option>
                <option value="CompanyWebsite">Company Website</option>
                <option value="CRM">CRM</option>
                <option value="EcommarceSite">Ecommarce Site</option>*@
            </select>
            <span asp-validation-for="SetupTemplate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
            &nbsp;&nbsp;<a href="/SetupHome/Back" class="btn btn-danger">Back</a>&nbsp;&nbsp;
            <button type="reset" class="btn btn-default">Clear</button>
        </div>
    </div>
</form>
    
