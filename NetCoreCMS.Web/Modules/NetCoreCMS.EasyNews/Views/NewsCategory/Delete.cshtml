@model Category

@{
    Layout = Constants.AdminLayoutName;
    Title = "Item Delete";
    SubTitle = "Delete item";
}



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <form id="deletetForm" class="form-horizontal" asp-controller="@ControllerName" asp-action="Delete" method="post">

                        <div class="col-sm-8 pull-left">
                            <h3>Are you sure you want to delete @Model.Name ?</h3>
                            <div class="col-md-12">
                                <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                                <a class="btn btn-default" asp-action="Manage">No</a>
                                <button id="delete" class="btn btn-danger" type="submit">Delete</button>
                            </div>                            
                        </div>
                        
                    </form>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
@section Scripts{

}
