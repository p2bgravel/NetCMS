@{
    Layout = Constants.AdminLayoutName;
    Title = "Dashboard";
    SubTitle = "Admin Dashboard";
}
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-file-text-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.TotalPublishedPage/<b>@ViewBag.TotalPage</b></div>
                        <div>Published / Total Pages!</div>
                    </div>
                </div>
            </div>
            <a asp-controller="CmsPage" asp-action="Manage">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.TotalPublishedPost/<b>@ViewBag.TotalPost</b></div>
                        <div>Published / Total Posts!</div>
                    </div>
                </div>
            </div>
            <a asp-controller="Post" asp-action="Manage">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-group fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.TotalUser</div>
                        <div>Total Users!</div>
                    </div>
                </div>
            </div>
            <a asp-controller="Users" asp-action="Index">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-desktop fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.TotalTheme/@ViewBag.TotalModule</div>
                        <div>Total Theme / Module!</div>
                    </div>
                </div>
            </div>
            
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><a asp-controller="CmsModule" asp-action="Index"><i class="fa fa-arrow-circle-right"></i> Module</a></span>
                    <span class="pull-right">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                    <span class="pull-right"><a asp-controller="CmsTheme" asp-action="Index"><i class="fa fa-arrow-circle-right"></i> Theme</a></span>
                    <div class="clearfix"></div>
                </div>
            
        </div>
    </div>
</div>
     