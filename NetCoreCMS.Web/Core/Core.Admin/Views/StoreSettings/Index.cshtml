@model StoreSettings

@{
    Layout = Constants.AdminLayoutName;
    Title = SubTitle = "Store Settings";

    var controllerName = "StoreSettings";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @SubTitle
            </div>
            <div class="panel-body">
                <form id="settingsCreateEditForm" class="form-horizontal" asp-controller="@controllerName" asp-action="Index" method="post">
                    <div class="col-sm-8 pull-left">
                        <div class="col-md-12">
                            <span asp-validation-summary="ValidationSummary.All" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3">Store Base URL</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" asp-for="StoreBaseUrl" placeholder="Enter store base URL">
                                <span asp-validation-for="StoreBaseUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3">Secret Key</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" asp-for="SecretKey" placeholder="Secret Key">
                                <span asp-validation-for="SecretKey" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{

}
