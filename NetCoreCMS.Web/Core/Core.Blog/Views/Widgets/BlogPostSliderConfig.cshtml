<div class="form-group">
    <label class="col-sm-3 control-label">Header Text</label>
    <div class="col-sm-9">
        <input type="text" class="form-control" id="headerText" name="headerText" placeholder="Enter Header Text">
    </div>
</div>

<hr />
<div class="form-group">
    <label class="col-sm-4 control-label" style="padding-top:0px;">Disable Auto Scroll</label>
    <div class="col-sm-8">
        <input type="checkbox" id="disableAutoScroll" name="disableAutoScroll">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label">Interval (s)</label>
    <div class="col-sm-8">
        <input type="number" class="form-control" id="interval" name="interval" placeholder="Enter interval in second" value="3">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label">Total Post</label>
    <div class="col-sm-8">
        <input type="number" class="form-control" id="totalPost" name="totalPost" placeholder="Enter Total Post" value="5">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label">Display Post</label>
    <div class="col-sm-8">
        <select class="form-control" id="displayPost" name="displayPost" >
            <option value="1">1</option>
            <option value="3">3</option>
        </select>
        @*<input type="number" placeholder="Enter Display Post" value="1">*@
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label" style="padding-top:0px;">Show Side Nav</label>
    <div class="col-sm-8">
        <input type="checkbox" id="showSideNav" name="showSideNav">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label" style="padding-top:0px;">Show Bottom Nav</label>
    <div class="col-sm-8">
        <input type="checkbox" id="showBottomNav" name="showBottomNav">
    </div>
</div>

<hr />
<div class="form-group">
    <label class="col-sm-4 control-label" style="padding-top:0px;">Featured</label>
    <div class="col-sm-8">
        <input type="checkbox" id="isFeatured" name="isFeatured">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label" style="padding-top:0px;">Sticky</label>
    <div class="col-sm-8">
        <input type="checkbox" id="isSticky" name="isSticky">
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">Category</label>
    <div class="col-sm-9">
        @*<input type="text" class="form-control" id="name" name="name" placeholder="Enter Slider Name">*@
        <select class="form-control" id="categoryId" name="categoryId">
            <option value="0">All</option>
            @foreach (var item in Model.CategoryList)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
</div>