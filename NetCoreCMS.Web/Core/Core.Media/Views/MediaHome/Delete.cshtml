@using NetCoreCMS.Framework.Utility
@model NccMediaViewModel

@{
    Layout = ViewBag.Layout;
    Title = "Image Delete";
    SubTitle = "Delete image";
    if (ViewBag.IsFile)
    {
        Title = "File Delete";
        SubTitle = "Delete file";
    }
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <form id="imageDeleteForm" class="form-horizontal" asp-controller="MediaHome" asp-action="Delete" method="post">

                        <div class="col-sm-8 pull-left">
                            <h3>Are you sure you want to delete @Model.FileName ?</h3>
                            <div class="col-md-12">
                                <input type="hidden" id="fullPath" name="fullPath" value="@Model.FullPath" />
                                <input type="hidden" id="parrentDir" name="parrentDir" value="@Model.ParrentDir" />
                                <input type="hidden" id="inputId" name="inputId" value="@ViewBag.InputId" />  
                                @if (ViewBag.IsFile)
                                {
                                    <input type="hidden" id="isFile" name="isFile" value="true" />
                                }
                                else
                                {
                                    <input type="hidden" id="isFile" name="isFile" value="false" />
                                }                              
                                <input type="hidden" id="status" name="status" value="1" />
                                <a class="btn btn-default" asp-action="Index" asp-route-sq="@Model.ParrentDir" asp-route-isFile="@ViewBag.IsFile" asp-route-inputId="@ViewBag.InputId">No</a>
                                <button id="delete" class="btn btn-danger" type="submit">Delete</button>
                            </div>                            
                        </div>
                        
                    </form>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
@section Scripts{
}
