@{
    Layout = Constants.AdminLayoutName;
    Title = "Menu Management";
    SubTitle = "Manage menus";
    var createMenu = "active";
    var manageMenu = "";

    if (ViewBag.IsManage)
    {
        createMenu = "";
        manageMenu = "active";
    }
}


