            }

            $(".pageTitle").change(function () {
                $(this).parent().parent().find(".pageSlug").val(NccUtil.GetSafeSlug($(this).val()));
                //$(".pageSlug").val(NccUtil.GetSafeSlug($(this).val()));
            });

            $("#publish").click(function () {
                var element = document.getElementById('PageStatus');
